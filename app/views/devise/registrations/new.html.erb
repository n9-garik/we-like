<% provide(:title, 'Регистрация') %>

<div class="row">
  <div class="span6">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal well' }) do |f| %>
  <%= devise_error_messages! %>
	<legend>Регистрация</legend>
<div class="control-group">
<%= f.label :username, 'Имя', class: "control-label" %>
<div class="controls">
<%= f.text_field :username, autofocus: true, placeholder: "Имя пользователя" %>
</div>
</div>

<div class="control-group">
  <%= f.label :email, class: "control-label" %>
<div class="controls">
  <%= f.email_field :email, placeholder: "Ваш e-mail" %>
</div>
</div>
<div class="control-group">
  <%= f.label :password, 'Пароль', class: "control-label" %>
<div class="controls">
  <%= f.password_field :password, placeholder: "Пароль" %>
</div>
</div>
<div class="control-group">
  <%= f.label :password_confirmation, 'Подтверждение', class: "control-label" %>
<div class="controls">
  <%= f.password_field :password_confirmation, placeholder: "Подтверждение пароля" %>
</div>
</div>

<div class="form-actions">
  <%= f.submit "Создать аккаунт", class: "btn btn-large btn-primary" %>
</div>
</form>


<%= render "devise/shared/links" %>
</div>
<span class="span6">
<%= image_tag "gift-box-icon.png" %>
<% end %>
</span>
</div>
